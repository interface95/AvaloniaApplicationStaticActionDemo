<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <Nullable>enable</Nullable>
        <BuiltInComInteropSupport>true</BuiltInComInteropSupport>
        <ApplicationManifest>app.manifest</ApplicationManifest>
        <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
        <PublishAot>true</PublishAot>
        <UseSkiaSharp>true</UseSkiaSharp>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Avalonia" Version="12.0.999-cibuild0059348-alpha" />
        <PackageReference Include="Avalonia.Desktop" Version="12.0.999-cibuild0059348-alpha" />
        <PackageReference Include="Avalonia.Themes.Fluent" Version="12.0.999-cibuild0059348-alpha" />
        <PackageReference Include="Avalonia.Fonts.Inter" Version="12.0.999-cibuild0059348-alpha" />
        <!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
        <PackageReference Include="Avalonia.Diagnostics" Version="12.0.999-cibuild0059348-alpha">
            <IncludeAssets Condition="'$(Configuration)' != 'Debug'">None</IncludeAssets>
            <PrivateAssets Condition="'$(Configuration)' != 'Debug'">All</PrivateAssets>
        </PackageReference>
        <PackageReference Include="SkiaSharp" Version="3.119.0" />
    </ItemGroup>

    <PropertyGroup>
        <IsWindows Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Windows)))' == 'true'">true</IsWindows>
    </PropertyGroup>

    <!--只有在windows下才启用UPX压缩，macOS和Linux不支持-->
    <ItemGroup Condition="'$(IsWindows)'=='true' AND '$(RuntimeIdentifier)' == 'win-x64'">
        <PackageReference Include="PublishAotCompressed" Version="1.0.3" />
    </ItemGroup>

</Project>
